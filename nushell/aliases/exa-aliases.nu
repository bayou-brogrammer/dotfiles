export alias x = exa -al --color=always --group-directories-first --icons # preferred listing
export alias xa = exa -a --color=always --group-directories-first --icons  # all files and dirs
export alias xl = exa -l --color=always --group-directories-first --icons  # long format
export alias xt = exa -aT --color=always --group-directories-first --icons # tree listing
export alias xl. = exa -ald --color=always --group-directories-first --icons .* # show only dotfiles