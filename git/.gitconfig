[hub]
    protocol = ssh

[commit]
	gpgsign = true
    template = ~/.git-commit-template

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[push]
    autoSetupRemote = true

# [format]
#     pretty = %C(yellow)%h%Creset %C(magenta)%cd%Creset %an <%ae> %C(cyan)%s%Creset%C(yellow)%d%Creset

[init]
	defaultBranch = main

[pager]
    difftool = true

# https://github.com/GitAlias/gitalias
[include]
	path = ~/.gitalias.txt

# Alternate identities
[include]
	path = ~/.gitidentities/identities

[url "ssh://git@github.com/"]
  insteadOf = https://github.com/

[guitool "Stash/show"]
  cmd = git stash show -p
[guitool "Stash/list"]
  cmd = git stash list
[guitool "Stash/pop"]
  cmd = git stash pop
[guitool "Stash/drop"]
  cmd = git stash drop
  confirm = yes
[guitool "Stash"]
  cmd = git stash
	
[alias]
    dft = difftool
    nuke = !git-nuke
    cr = "!f() { git fetch -p && for branch in $(git branch -vv | grep ': gone]' | awk '{print $1}'); do git branch -D $branch; done }; f"
    pnv = push --no-verify
    pnvf = push --no-verify --force
    #############
	l = log --oneline
    lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%ad%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(yellow)%s%C(reset) %C(dim white)- %an<%ae>%C(reset)' --all
    #############
	ours = "!f() { git checkout --ours $@ && git add $@; }; f"
	theirs = "!f() { git checkout --theirs $@ && git add $@; }; f"